# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# To restart or reload i3wm on the fly, issue the command: i3-msg <restart|reload>

set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font is
# used in the bar {} block below.
font pango:Terminus 7

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty

# start a browser
bindsym $mod+BackSpace exec firefox

# kill focused window
bindsym $mod+Shift+q kill

# rofi launcher
bindsym $mod+d exec "rofi -combi-modi 'launcher:rofi-launcher,workspaces:rofi-switch-workspaces,drun' -show combi -modes combi -display-combi 'choice'"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# change focus to the other monitor
bindsym $mod+o focus output left

# when cycling through windows, do not move to the next window or workspace
focus_wrapping workspace

# Move the current workspace to another monitor
bindsym $mod+Shift+o move workspace to output left

# split in horizontal orientation
bindsym $mod+semicolon split h

# split in vertical orientation
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# focus on the parent container
bindsym $mod+a focus parent

# focus on the child container
bindsym $mod+Shift+a focus child

# Workspaces mapped to the secondary monitor
workspace "other" output DP-3

# Workspaces mapped to the primary monitor
workspace "misc" output DP-0

# Volume controls (`pactl list sinks`, second arugment is the sink #)
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 2 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 2 -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 2 toggle # mute sound

# do not allow control+q to kill firefox or anything else
bindsym Control+q nop

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
focus_follows_mouse yes

# Shortcut to lock the screen
bindsym $alt+Control+Shift+l exec --no-startup-id rofi-i3-locker

# Startup programs
exec --no-startup-id compton -CGb
exec --no-startup-id nm-applet
exec --no-startup-id ~/.i3/ssh-agent.sh
exec_always --no-startup-id hsetroot -solid "#00001A"
exec_always --no-startup-id /usr/bin/xautolock -resetsaver -detectsleep -time 3 -locker 'rofi-i3-locker' -notify 30 -notifier "notify-send -i info -u normal -t 3000 -- 'Locking screen in 30 seconds'"
exec_always --no-startup-id /usr/bin/xmodmap ~/.xmodmap
exec_always --no-startup-id /usr/bin/xrdb -load ~/.xresources
exec_always --no-startup-id /usr/bin/gnome-settings-daemon &
exec_always --no-startup-id /usr/bin/xset r rate 250 50
exec_always --no-startup-id xrandr --output DP-0 --primary --rotate normal --output DP-3 --left-of DP-0 --rotate right --brightness 0.8

# NOTE: Use the "xprop" utility to find window class name strings, ref: https://www.tuxtips.info/linux/how-to-find-applications-window-class-in-i3-window-manager
# WM_CLASS(STRING) = "<instance>", "<class>"

# Ensure that the signal window always stays in floating mode
exec_always --no-startup-id ~/.i3/startup-app.sh "signal-desktop" "signal-desktop"
for_window [class="Signal" instance="signal"] floating enable, border normal, move to scratchpad

# Start up a floating terminal & leave it in the scratchpad
exec_always --no-startup-id alacritty --class "scratch-terminal" --title "scratch terminal"
for_window [class="scratch-terminal" instance="scratch-terminal"] floating enable, border normal, move to scratchpad

# Start 1password desktop and move it to the scratchpad
exec_always --no-startup-id ~/.i3/startup-app.sh "1password --disable-gpu" "1password"
for_window [class="1Password" instance="1password"] floating enable, border normal, move to scratchpad

# Always start gnome-calculator in floating mode
for_window [class="Gnome-calculator"] floating enable, border normal, resize set 640 480

# Always start vlc in floating mode
for_window [class="vlc" instance="vlc"] floating enable, border normal

# Scratchpad shortcuts
bindsym $mod+minus scratchpad show
bindsym $alt+t [class="Alacritty" instance="scratch-terminal"] scratchpad show
bindsym $alt+p [class="1Password" instance="1password"] scratchpad show

# Ensure that the following windows always start in floating mode
for_window [class="Pavucontrol"] floating enable, border normal
for_window [class="Blueman-manager"] floating enable, border normal, resize set 640 480
for_window [class="Org.gnome.clocks"] floating enable, border normal

# Use special Ergodox keys to cycle through workspaces
bindsym $alt+Control+Shift+Left workspace prev_on_output
bindsym $alt+Control+Shift+Right workspace next_on_output

# Do not allow any windows to steal focus or try and grab my attention
focus_on_window_activation none
force_display_urgency_hint 0

# color defines for zenburn styled i3
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $bg        $bg         $ia

# Primary monitor: bar + status
bar {
  output DP-0
  tray_output DP-0
  font pango:terminal-font 10
  status_command i3status -c ~/.i3/i3status.conf | ~/.i3/wrapper.py

  colors {
    background          $bg
    statusline          $fg
    separator           $hi
    focused_workspace   $gn        $bg        $ac
    active_workspace    $bg        $bg        $ia
    inactive_workspace  $bg        $bg        $ia
    urgent_workspace    $bg        $bg        $ia
    binding_mode        $rd        $bg        $ac
  }
}

# Secondary monitor: bar
bar {
  output DP-3
  tray_output none
  font pango:terminal-font 10

  colors {
    background          $bg
    statusline          $fg
    separator           $hi
    focused_workspace   $gn        $bg        $ac
    active_workspace    $bg        $bg        $ia
    inactive_workspace  $bg        $bg        $ia
    urgent_workspace    $bg        $bg        $ia
    binding_mode        $rd        $bg        $ac
  }
}
